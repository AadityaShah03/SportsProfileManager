<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#26C6DA"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:columnCount="2"
            app:rowCount="3">

            <ImageView
                android:id="@+id/teamid00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#EF5350"
                android:contentDescription="@string/logo_1"
                android:onClick="SetTeamIcon"
                android:visibility="visible"
                app:layout_column="0"
                app:layout_row="0"
                tools:srcCompat="@drawable/ic_logo_01"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/teamid01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#EC407A"
                android:contentDescription="@string/logo_2"
                android:onClick="SetTeamIcon"
                android:visibility="visible"
                app:layout_column="1"
                app:layout_row="0"
                tools:srcCompat="@drawable/ic_logo_02"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/teamid02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#AB47BC"
                android:contentDescription="@string/logo_3"
                android:onClick="SetTeamIcon"
                android:visibility="visible"
                app:layout_column="0"
                app:layout_row="1"
                tools:srcCompat="@drawable/ic_logo_03"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/teamid03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFEE58"
                android:contentDescription="@string/logo_4"
                android:onClick="SetTeamIcon"
                android:visibility="visible"
                app:layout_column="1"
                app:layout_row="1"
                tools:srcCompat="@drawable/ic_logo_04"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/teamid04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#5C6BC0"
                android:contentDescription="@string/logo_5"
                android:onClick="SetTeamIcon"
                android:visibility="visible"
                app:layout_column="0"
                app:layout_row="2"
                tools:srcCompat="@drawable/ic_logo_05"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/teamid05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#5C6BC0"
                android:contentDescription="@string/logo_6"
                android:onClick="SetTeamIcon"
                android:visibility="visible"
                app:layout_column="1"
                app:layout_row="2"
                tools:srcCompat="@drawable/ic_logo_00"
                tools:visibility="visible" />
        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>